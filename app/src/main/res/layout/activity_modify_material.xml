<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ModifyMaterialActivity">

    <LinearLayout
        android:id="@+id/linear_layout_modify_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_light_gray"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar alta de material"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/roboto_serif"
            android:layout_marginVertical="25dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_modify_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:layout_marginHorizontal="25dp"
            app:contentPadding="15dp"
            android:visibility="visible">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Solicitante field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Solicitante" />

                    <TextView
                        android:id="@+id/tv_solicitante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Empresa field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Empresa"
                        android:layout_marginTop="15dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_edit_empresa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp" />

                        <Spinner
                            android:id="@+id/spinner_empresa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/ib_edit_empresa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/ic_edit"
                            android:layout_gravity="end|center_vertical"
                            android:background="@color/color_btn"
                            tools:src="@drawable/ic_check" />
                    </FrameLayout>

                    <!-- Nombre field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Tipo de alta field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo de alta"
                        android:layout_marginTop="15dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_edit_tipo_alta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp" />

                        <Spinner
                            android:id="@+id/spinner_material_tipo_alta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/ib_edit_tipo_alta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/ic_edit"
                            android:layout_gravity="end|center_vertical"
                            android:background="@color/color_btn"
                            tools:src="@drawable/ic_check" />
                    </FrameLayout>

                    <!-- Familia field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Familia"
                        android:layout_marginTop="15dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_edit_familia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp" />

                        <Spinner
                            android:id="@+id/spinner_familia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/ib_edit_familia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/ic_edit"
                            android:layout_gravity="end|center_vertical"
                            android:background="@color/color_btn"
                            tools:src="@drawable/ic_check" />
                    </FrameLayout>

                    <!-- Subfamilia field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subfamilia"
                        android:layout_marginTop="15dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_edit_subfamilia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp" />

                        <Spinner
                            android:id="@+id/spinner_subfamilia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/ib_edit_subfamilia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/ic_edit"
                            android:layout_gravity="end|center_vertical"
                            android:background="@color/color_btn"
                            tools:src="@drawable/ic_check" />
                    </FrameLayout>

                    <!-- Marca field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marca"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_marca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords" />

                    <!-- Parte/modelo field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parte / Modelo"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_parte_modelo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Nombre común field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre común"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_nombre_comun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Medida field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medida"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_medida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Ing activo field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ing activo"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_ing_activo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Tipo producto field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo producto"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_tipo_producto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Alias field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alias"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_alias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Unidad field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unidad"
                        android:layout_marginTop="15dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_edit_unidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp" />

                        <Spinner
                            android:id="@+id/spinner_unidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/ib_edit_unidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/ic_edit"
                            android:layout_gravity="end|center_vertical"
                            android:background="@color/color_btn"
                            tools:src="@drawable/ic_check"/>
                    </FrameLayout>

                    <!-- % IVA field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="% IVA"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_iva"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- % IEPS field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="% IEPS"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_ieps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Propósito field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Propósito"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_proposito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Es importado field -->
                    <CheckBox
                        android:id="@+id/cb_es_importado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="¿Es importado?" />

                    <!-- Es material empaque field -->
                    <CheckBox
                        android:id="@+id/cb_es_material_empaque"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="¿Es material empaque?" />

                    <!-- Es producto terminado field -->
                    <CheckBox
                        android:id="@+id/cb_es_prod_terminado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="¿Es producto terminado?" />

                    <!-- Aprobado compras field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aprobado compras: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_aprob_compras"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No" />

                    </LinearLayout>

                    <!-- Aprobado finanzas field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aprobado finanzas: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_aprob_finanzas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No" />

                    </LinearLayout>

                    <!-- Aprobado sistemas field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aprobado sistemas: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_aprob_sistemas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No" />

                    </LinearLayout>

                    <!-- Comentarios field -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comentarios"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:id="@+id/et_comentarios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- Approve button -->
                    <Button
                        android:id="@+id/btn_approve"
                        android:text="Aprobar"
                        android:layout_marginTop="15dp"
                        android:drawableRight="@drawable/ic_next"
                        android:paddingHorizontal="50dp"
                        style="@style/saveButton" />

                    <!-- Decline button -->
                    <Button
                        android:id="@+id/btn_decline"
                        android:text="Rechazar"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/ic_decline"
                        android:paddingHorizontal="50dp"
                        style="@style/saveButton" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_confirm_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:layout_marginHorizontal="25dp"
            app:contentPadding="15dp"
            android:visibility="gone">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solicitante: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_solicitante_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Empresa: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_empresa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo alta: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_tipo_alta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Familia: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_familia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subfamilia: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_subfamilia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marca: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_marca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parte / Modelo: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_parte_modelo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre común: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_nombre_comun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medida: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_medida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ing activo: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_ing_activo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo producto: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_tipo_producto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alias: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_alias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unidad: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_unidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="% IVA: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_iva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="% IEPS: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_ieps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Propósito: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_proposito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¿Es importado?: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_es_importado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¿Es material empaque?: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_es_material_empaque"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¿Es producto terminado?: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_es_prod_terminado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comentarios: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_comentarios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_modify"
                        android:text="Modificar"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/ic_arrow_back"
                        android:paddingHorizontal="50dp"
                        style="@style/saveButton" />

                    <Button
                        android:id="@+id/btn_confirm"
                        android:text="Confirmar"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/ic_send"
                        android:paddingHorizontal="50dp"
                        style="@style/saveButton" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>