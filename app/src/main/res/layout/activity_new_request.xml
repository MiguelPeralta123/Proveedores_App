<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewRequestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva solicitud"
            android:textSize="42sp"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una opciÃ³n"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_serif"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_provider"
            android:text="Cliente o proveedor"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_person_add"
            android:paddingHorizontal="80dp"
            style="@style/menuButton" />
        <Button
            android:id="@+id/btn_material"
            android:text="Material"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_post_add"
            android:paddingHorizontal="80dp"
            style="@style/menuButton" />

        <Button
            android:id="@+id/btn_menu"
            android:text="Menu"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:paddingHorizontal="85dp"
            style="@style/menuButton" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>